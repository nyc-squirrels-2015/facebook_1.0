

<% if @user.id == session[:user_id] %>

  <a href="#"><h2 class="edit_name"><%= @user.name%></h2></a>
  <a href="/profile/<%=@user.id%>/edit"> Change your password </a>
  <div id="cadre">
    <a href="/profile/<%= @user.id%>/update_image"> <img src="<%=@user.photo_url%>"></a>
    <div>Click on the image to edit it</div>
    <form action="/profile/<%= @user.id%>/update_image" method="post" class="hidden_form" style="display:none">
      <input type="text" placeholder="photo_url">
      <input type="submit">
    </form>
  </div>
<% else %>
  <h2><%= @user.name%></h2>
  <div id="cadre">
    <img src="<%=@user.photo_url%>">
  </div>
<%end%>